<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1c1b1a"
    android:paddingVertical="10dp"
    android:paddingHorizontal="30dp">

    <TextView
        android:id="@+id/exclusion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/CustomText"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Filter" />


    <TextView
        android:id="@+id/price_inc"
        style="@style/CustomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:text="Harga Meningkat"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2c2c2c"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/price_desc"
        style="@style/CustomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:text="Harga Menurun"/>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#2c2c2c" />
    <TextView
        android:id="@+id/time_desc"
        style="@style/CustomText"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Stok Terlama"/>
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2c2c2c"/>
    <TextView
        android:id="@+id/time_inc"
        style="@style/CustomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginVertical="10dp"
        android:text="Stok Terbaru"/>
</LinearLayout>